{% extends 'base.html.twig' %}

{% block title %}Affichage Cat√©gories - {{ parent() }}{% endblock %}

{% block body %}
<h1 class="text-center text-dark py-5"> {{ category.title }}</h1>
{% if category.title is same as ('Chansons') %}
<div class="d-flex justify-content-center">
<img  src="{{ asset('assets/images/musique.jpeg') }}" alt="" class="img-display-category">
</div>
{% elseif category.title is same as ('Histoires') %}
<div class="d-flex justify-content-center">
<img  src="{{ asset('assets/images/img-histoire.jpeg') }}" alt="" class="img-display-category"></div>
{% elseif category.title is same as ('Coloriage') %}
<div class="d-flex justify-content-center ">
<img  src="{{ asset('assets/images/img-coloriage.jpeg') }}" alt="" class="img-display-category" ></div>
{% endif %}
<div class="container-cards d-flex justify-content-center flex-wrap">

   
            
        {% for product in products %}
     {% if product.type.title is same as ('PDF')  %}
     <div class="card-category  my-2 p-3  ">
        <div class="card-body ">
        <embed src="{{ asset('upload/') }}{{product.file}}">
        <a class="pdf" href="{{ asset('upload/') }}{{product.file}}">{{product.title}} </a>
        </div>
     
     </div>
      
 {% elseif product.type.title is same as ('jpg') or product.type.title is same as('png') %}
      <a href="{{ asset('upload/') }}{{product.file}}"onclick="javascript:window.open(this.href);return(false);"  >
     
      <img class="coloriage-img" src="{{ asset('upload/') }}{{product.file}} " >
      </a> 

{% elseif product.type.title is same as ('MP4') %}
 <video width="320" height="240" controls autoplay>
      <source src="" type=video/mp4>
    </video>
{% else %}

      <div class="card-category  my-4 mx-4  ">
       
        <div class="card-body ">
        
        <iframe width="300" height="300" src="{{ product.file }}"></iframe>
          <div class="btn-card">
            <a href="{{ product.file }}" class="button m-4">{{ product.title }}</a>
            </div>
        </div>
        </div>
    {% endif %} 
     {% endfor %}</div>
     






































{% endblock %}